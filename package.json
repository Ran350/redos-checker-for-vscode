{
	"name": "redos-checker-for-vscode",
	"displayName": "ReDoS Checker for VSCode",
	"description": "VSCode extension to detect vulnerable regular expressions",
	"version": "0.0.3",
	"publisher": "Ran350",
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"security",
		"vulnerable",
		"ReDoS",
		"regular expression",
		"regex"
	],
	"bugs": {
		"url": "https://github.com/Ran350/redos-checker-for-vscode/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Ran350/redos-checker-for-vscode.git"
	},
	"activationEvents": [
		"onCommand:redos-checker-for-vscode.check"
	],
	"main": "./src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "redos-checker-for-vscode.check",
				"title": "redos-checker-for-vscode"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorHasSelection",
					"command": "redos-checker-for-vscode.check"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.57.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"recheck": "^4.1.1"
	}
}
